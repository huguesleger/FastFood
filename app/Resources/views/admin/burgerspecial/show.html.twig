{% extends ':admin:templateAdmin.html.twig' %}

  {% block content %}
    <h1>Burgerspecial</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ burgerSpecial.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ burgerSpecial.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ burgerSpecial.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if burgerSpecial.dateDebut %}{{ burgerSpecial.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if burgerSpecial.datefin %}{{ burgerSpecial.datefin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ burgerSpecial.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ burgerSpecial.image }}</td>
            </tr>
            <tr>
                <th>Publier</th>
                <td>{% if burgerSpecial.publier %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('burgerspecial_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('burgerspecial_edit', { 'id': burgerSpecial.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% block scriptForm %}
     <script type="text/javascript" src="{{asset('js/backend/burger.js')}}"></script>
{% endblock %}