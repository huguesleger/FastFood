{% extends ':admin:templateAdmin.html.twig' %}

  {% block content %}
       
    <h1>Accompagnement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ accompagnement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ accompagnement.name }}</td>
            </tr>
            <tr>
